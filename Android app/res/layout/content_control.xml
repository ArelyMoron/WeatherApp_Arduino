<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".control"
    tools:showIn="@layout/activity_control">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="235dp"
        android:layout_marginTop="48dp"
        android:contentDescription="Nube con sol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_nube" />

    <TextView
        android:id="@+id/tv_temperatura"
        android:layout_width="213dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text=" 24 Â°C"
        android:textAlignment="center"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Gota de agua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_temperatura"
        app:srcCompat="@drawable/ic_humedad" />

    <TextView
        android:id="@+id/tv_humedad"
        android:layout_width="56dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Icono decorativo de gota de agua"
        android:lineSpacingExtra="10sp"
        android:paddingTop="8sp"
        android:text="20%"
        android:textAlignment="center"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_temperatura" />

    <TextClock
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:textAlignment="center"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.065" />

</android.support.constraint.ConstraintLayout>